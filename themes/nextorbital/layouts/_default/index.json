{{- $index := slice -}}
{{- range where .Site.RegularPages "Type" "!=" "json" -}}
{{- $index = $index | append (dict "title" .Title "permalink" .Permalink "description" (or .Description .Summary) "content" (.Plain | truncate 200) "date" (.Date.Format "2006-01-02")) -}}
{{- end -}}
{{- $index | jsonify -}}